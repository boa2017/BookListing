<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RelativesLayoutCommon"
    tools:context="com.example.android.booklisting.BookActivity">

    <LinearLayout
        android:id="@+id/searcher"
        style="@style/LinearSearch">

        <EditText
            android:id="@+id/editText"
            style="@style/EditText"
            android:hint="@string/your_search" />

        <Button
            android:id="@+id/search_button"
            style="@style/SearchButton"
            android:background="@drawable/ic_action_search" />

    </LinearLayout>

    <View
        android:id="@+id/view"
        style="@style/Views"
        android:layout_below="@id/searcher" />

    <ProgressBar
        android:id="@+id/loading_spinner"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <ListView
        android:id="@+id/list"
        style="@style/ListView" />

    <ImageView
        android:id="@+id/search_image"
        style="@style/BackgroundImage" />

    <TextView
        android:id="@+id/empty_view"
        style="@style/ViewEmptyText" />
</RelativeLayout>



